    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LocationDateActivity"></activity>
        <activity android:name=".ReadNoteActivity"></activity>
        <activity android:name=".ListNotesActivity"></activity>
        <activity android:name=".DialogActivity"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".CreateLocationActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".InitActivity"></activity>
        <activity android:name=".CreateNoteActivity"></activity>
        <activity android:name=".ListPickActivity"></activity>
        <activity android:name=".ProfileActivity"></activity>
        <activity android:name=".KeySetActivity"></activity>
        <activity android:name=".KeyEntryActivity"></activity>

        <service android:name=".GPSService"/>

    </application>


</manifest>